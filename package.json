{
  "name": "banking-service",
  "version": "1.0.0",
  "description": "This is a small backend service application",
  "main": "dist/app.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "db:migration": "./node_modules/sequelize-cli/lib/sequelize migration:generate --name",
    "db:migrate": "./node_modules/sequelize-cli/lib/sequelize db:migrate",
    "db:rollback": "./node_modules/sequelize-cli/lib/sequelize db:migrate:undo",
    "db:rollback:all": "./node_modules/sequelize-cli/lib/sequelize db:migrate:undo:all",
    "db:seeder": "./node_modules/sequelize-cli/lib/sequelize seed:generate --name",
    "db:seed": "./node_modules/sequelize-cli/lib/sequelize db:seed:all",
    "db:seed:undo": "./node_modules/sequelize-cli/lib/sequelize db:seed:undo:all"
  },
  "author": "Tinkeshwar Singh",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@koa/cors": "^5.0.0",
    "@koa/multer": "^3.0.2",
    "@koa/router": "^13.1.0",
    "@types/multer": "^1.4.12",
    "axios": "^1.8.3",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.16.0",
    "koa-bodyparser": "^4.4.1",
    "lodash": "^4.17.21",
    "mysql2": "^3.13.0",
    "sequelize": "^6.37.6",
    "sequelize-typescript": "^2.1.6",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.21",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/hapi__boom": "^7.4.1",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__multer": "^2.0.7",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/winston": "^2.4.4",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
